<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bhanukabandara.mobile_cw2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/LoginTheme">
        <activity android:name=".activity.MainActivity">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <activity android:name=".activity.DeleteAppointmentActivity" />
        <activity android:name=".activity.WelcomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".activity.EditAppointmentActivity" />
        <activity android:name=".activity.EditItemActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.MoveAppointmentActivity" />
        <activity android:name=".activity.MoveItemActivity" />
        <activity android:name=".activity.CreateAppointmentActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".activity.SearchAppointmentActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

        </activity>

        <activity android:name=".activity.ThesaurusActivity" />
        <activity android:name=".activity.ThesaurusEditTextActivity" />


    </application>

</manifest>